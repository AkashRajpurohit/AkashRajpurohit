---
import { twJoin } from 'tailwind-merge';

type Props = {
  href: string;
  Icon: any;
  class?: string;
};

const { href, Icon, class: className } = Astro.props;
---

<li class={twJoin('flex', className)}>
  <a
    href={href}
    target='_blank'
    class='group flex gap-2 items-center text-sm font-medium text-zinc-800 transition hover:text-primary-500 dark:text-zinc-200 dark:hover:text-primary-500'
  >
    <Icon
      class='h-6 w-6 flex-none fill-zinc-500 transition group-hover:fill-primary-500'
    />
    <span>
      <slot />
    </span>
  </a>
</li>
