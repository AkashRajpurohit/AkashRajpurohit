---
import TagsList from '@components/TagsList.astro';
import FunnelIcon from '@components/ui/icons/FunnelIcon';

type Props = {
  tagsList: string[];
  selectedTag?: string;
};

const { tagsList, selectedTag } = Astro.props;
---

<div class='rounded-2xl border border-zinc-100 p-6 dark:border-zinc-700/40'>
  <h2 class='flex text-sm font-semibold text-zinc-800 dark:text-zinc-100'>
    <FunnelIcon class='h-6 w-6 flex-none' />
    <span class='ml-3'>Filter by Tags</span>
  </h2>
  <div class='mt-4'>
    <TagsList tags={tagsList} selectedTag={selectedTag} />
  </div>
</div>
