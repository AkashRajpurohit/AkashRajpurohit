---
import HeaderLink from './HeaderLink.astro';
import { headerNavLinks, siteMetadata } from '@lib/config';
import ThemeToggle from './ThemeToggle.astro';
import MobileHeader from './MobileHeader';
---

<div class='w-full'>
  <div
    class='relative z-50 mx-auto max-w-5xl flex justify-between items-center mt-6'
  >
    <div class='px-2 sm:px-0'>
      <a href='/' aria-label='Home' class='pointer-events-auto'>
        <img
          src={siteMetadata.image_small}
          alt=''
          class='rounded-full ring-primary-500 object-cover object-top dark:ring-primary-600 h-9 w-9 ring-2'
        />
      </a>
    </div>
    <header class='flex flex-col'>
      <nav class='hidden sm:block'>
        <ul
          class='flex rounded-full bg-white/90 px-3 text-sm font-medium text-zinc-800 shadow-lg shadow-zinc-800/5 ring-1 ring-zinc-900/5 backdrop-blur dark:bg-zinc-800/90 dark:text-zinc-200 dark:ring-white/10'
        >
          {
            headerNavLinks.map((link) => (
              <HeaderLink href={link.href}>{link.title}</HeaderLink>
            ))
          }
        </ul>
      </nav>
    </header>
    <div class='flex gap-1 items-center'>
      <ThemeToggle />
      <MobileHeader client:visible />
    </div>
  </div>
</div>
